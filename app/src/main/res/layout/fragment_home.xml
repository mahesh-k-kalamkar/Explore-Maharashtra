<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="Discover"
                android:textColor="@color/dark_late_gray"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/title_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/nunito_black"
                android:text="@string/maharashtra"
                android:textColor="@color/orange"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/home_banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/title_bold"
                android:layout_margin="15dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="15dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ricefarm" />

                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sindhudurg_fort" />


                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/shivmaharaj" />

                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/leopard" />

                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/indiagate" />

                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/konkan_temple" />

                    </LinearLayout>

                </HorizontalScrollView>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/home_banner"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:layout_toStartOf="@+id/button_filter"
                android:background="@drawable/bg_search"
                android:gravity="center_vertical">

                <SearchView
                    android:id="@+id/search_recipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:iconifiedByDefault="false"
                    android:queryBackground="@android:color/transparent"
                    android:queryHint="Explore Here"
                    android:searchIcon="@drawable/ic_search_services"
                    android:theme="@style/SearchView"
                    app:queryBackground="@android:color/transparent" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/button_filter"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_below="@+id/home_banner"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_search"
                android:src="@drawable/ic_filter"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/choose_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito_black"
                android:text="MAJESTIC MAHARASHTRA"
                android:textColor="@color/dark_late_gray"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/container_choose_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choose_services"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                tools:ignore="RtlSymmetry">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/image_1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/bg_item_choose_services"
                                android:padding="10dp"
                                android:src="@drawable/natureandwild"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image_1"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_bold"
                                android:text="@string/nature"
                                android:textAlignment="center"
                                android:textColor="@color/dark_late_gray"
                                android:textSize="11sp"
                                tools:ignore="SmallSp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/image_2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/bg_item_choose_services"
                                android:padding="10dp"
                                android:src="@drawable/beach"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image_2"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_bold"
                                android:text="Beaches"
                                android:textAlignment="center"
                                android:textColor="@color/dark_late_gray"
                                android:textSize="11sp"
                                tools:ignore="SmallSp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/image_3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/bg_item_choose_services"
                                android:padding="10dp"
                                android:src="@drawable/hotel"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image_3"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_bold"
                                android:text="City Stay"
                                android:textAlignment="center"
                                android:textColor="@color/dark_late_gray"
                                android:textSize="11sp"
                                tools:ignore="SmallSp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/image_4"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/bg_item_choose_services"
                                android:padding="10dp"
                                android:src="@drawable/temple"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image_4"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_bold"
                                android:text="Heritage"
                                android:textAlignment="center"
                                android:textColor="@color/dark_late_gray"
                                android:textSize="11sp"
                                tools:ignore="SmallSp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/image_5"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/bg_item_choose_services"
                                android:padding="10dp"
                                android:src="@drawable/hillstation"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image_5"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_bold"
                                android:text="Hill      Station"
                                android:textAlignment="center"
                                android:textColor="@color/dark_late_gray"
                                android:textSize="11sp"
                                tools:ignore="SmallSp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/image_6"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/bg_item_choose_services"
                                android:src="@drawable/naturestay"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image_6"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_bold"
                                android:text="Nature    Stay"
                                android:textAlignment="center"
                                android:textColor="@color/dark_late_gray"
                                android:textSize="11sp"
                                tools:ignore="SmallSp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/image_7"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/bg_item_choose_services"
                                android:src="@drawable/lake"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image_7"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_bold"
                                android:text="Lake View Stay"
                                android:textAlignment="center"
                                android:textColor="@color/dark_late_gray"
                                android:textSize="11sp"
                                tools:ignore="SmallSp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/image_8"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/bg_item_choose_services"
                                android:padding="10dp"
                                android:src="@drawable/scubadiver"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image_8"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_bold"
                                android:text="Aquatic Sports"
                                android:textAlignment="center"
                                android:textColor="@color/dark_late_gray"
                                android:textSize="11sp"
                                tools:ignore="SmallSp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/image_9"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/bg_item_choose_services"
                                android:padding="10dp"
                                android:src="@drawable/uniqueexperiences"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image_9"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_bold"
                                android:text="Unique Experience"
                                android:textAlignment="center"
                                android:textColor="@color/dark_late_gray"
                                android:textSize="11sp"
                                tools:ignore="SmallSp" />
                        </RelativeLayout>


                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/container_choose_service"
                android:background="@drawable/bg_half_rounded2">

                <TextView
                    android:id="@+id/recommended"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nunito_black"
                    android:text="@string/recommended"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_recommended"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recommended"
                    android:layout_marginTop="10dp"
                    android:clipToPadding="false"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>